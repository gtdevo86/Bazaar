@using Bazaar.Models.ListingViewModels
@model SearchListingViewModel
@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        padding-top: 40px;
        padding-bottom: 40px;
        background-image: url(http://joshuamgreenspan.com/bazaar/content/images/background.jpg);
        background-repeat: no-repeat;
        background-position: center;
        width: 100%;
    }
</style>
@using (Html.BeginForm("Search", "Listing", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <img src="~/Content/images/Logo.png" class="logo" />
    <div class="search">
        <div class="row">
            <div class="search-well">
                <div class="input-group  col-xs-10 col-xs-offset-1">
                    @Html.DropDownListFor(m => m.CategoryType, new SelectList(Model.CategoryOptions, "Value", "Value"), new { @class = "form-control category" })
                    @Html.TextBoxFor(m => m.SearchTerms, new { @placeholder = "Find something near you!", @class = "form-control input-lg textbox" })
                   
                    <!--<input type="text" class="form-control input-lg" placeholder="Find something near you!" />-->
                    <!--Placeholder to show all categories for now-->
                    <input name="Category" type="hidden" value="All" />
                    <input name="CurrentPage" type="hidden" value=1 />
                    <input name="Distance" type="hidden" value=25 />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
}



