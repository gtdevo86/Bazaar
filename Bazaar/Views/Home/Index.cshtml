@using Bazaar.Models.ListingViewModels
@model SearchListingViewModel
@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        padding-top: 40px;
        padding-bottom: 40px;
    }
</style>
@using (Html.BeginForm("Search", "Listing", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <img src="~/Content/images/Logo.png" class="logo" />
    <div class="search">
        <div class="row">
            <div class = "search-well">
                <div class="input-group  col-xs-6 col-xs-offset-3">
                    @Html.TextBoxFor(m => m.SearchTerms, new { @placeholder = "Find something near you!", @class = "form-control input-lg" })
                     <!--<input type="text" class="form-control input-lg" placeholder="Find something near you!" />-->
                    <!--Placeholder to show all categories for now-->
                    <input name="Category" type="hidden" value="All" />
                        <span class="input-group-btn">
                            <button class="btn btn-info btn-lg" type="submit">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </span>
                  </div>
            </div>
        </div>
    </div>
}
