@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        padding-top: 40px;
        padding-bottom: 40px;
    }
</style>
<img src="~/Content/images/Logo.png" class="logo" />
<div class="search">
    <div class="row">
        <div class = "search-well">
            <div class="input-group col-xs-6 col-xs-offset-3">
                <input type="text" class="form-control input-lg" placeholder="Find something near you!" />
                <span class="input-group-btn">
                    <button class="btn btn-info btn-lg" type="button">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </span>
            </div>
        </div>
    </div>
</div>